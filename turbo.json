{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "apps/*/.env*",
        "packages/*/.env*",
        "pnpm-lock.yaml",
        "apps/**/next.config.*",
        "apps/**/astro.config.*",
        "**/tailwind.config.*",
        "**/postcss.config.*",
        "**/tsconfig.json"
      ],
      "outputs": [".next/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
